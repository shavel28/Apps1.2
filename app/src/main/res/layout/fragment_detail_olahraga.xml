<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/olahragaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Olahraga"
        android:textSize="18sp"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/buttonGpsSensor"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/olahragaDetail"
        android:layout_marginTop="16dp"
        android:text="Go to GPS,admin Sensor" />

    <Button
        android:id="@+id/buttonShredPreference"
        android:layout_width="398dp"
        android:layout_height="58dp"
        android:layout_below="@id/buttonGpsSensor"
        android:layout_marginTop="16dp"
        android:text="Go to Shred Preference" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewGpsSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS dan Sensor Data"
        android:textSize="18sp"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonFetchGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch GPS Data"
        android:layout_below="@id/textViewGpsSensor"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewGpsData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFetchGps"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
